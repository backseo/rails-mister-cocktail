
<div class="container">
  <div class="row">
    <div class="col">
    <p><%= link_to 'delete', cocktail_path(@cocktail), method: :delete  %></p>
      <div class="dose-form-box">

        <div class="photo">
          <h2><%= @cocktail.name %></h2>
          <%#= cl_image_tag @cocktail.photo, height: 180, width: 274, crop: :fill %>
        </div>
        <div class="formul">
          <ul>
          <% @cocktail.doses.each do |dose| %>
            <% if dose.persisted? %>
            <li>
              <%= dose.ingredient.name %><%= dose.description %>
              <%= link_to 'X', dose_path(dose), method: :delete %>

            </li>
            <% end %>
          <% end %>
          </ul>
          <div><%= render 'doses/form' %></div>
        </div>
      </div>
    </div>
  </div>
</div>






