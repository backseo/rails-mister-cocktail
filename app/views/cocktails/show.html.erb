<div class="container">
  <div class="row">
    <div class="col">
    <p><%= link_to 'Delete this cocktail', cocktail_path(@cocktail), method: :delete  %></p>
      <div class="dose-form-box">

        <div class="photo">
          <h2><%= @cocktail.name %></h2>
          <%= cl_image_tag @cocktail.photo, crop: :fill %>
        </div>
        <div class="formul">
          <ul>
          <% @cocktail.doses.each do |dose| %>
            <% if dose.persisted? %>
            <li>
              <p><%= dose.ingredient.name %> : <%= dose.description %>
                <%= link_to '[ X ]', dose_path(dose), method: :delete %>
              </p>
            </li>
            <% end %>
          <% end %>
          </ul>
          <div><%= render 'doses/form' %></div>
        </div>
      </div>
    </div>
  </div>
</div>






