<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :name, placeholder: 'Enter a name for this cocktail' %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
